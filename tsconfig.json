{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": ".",
        "allowJs": true,
        "noEmit": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": false,
        "skipLibCheck": true,
        "paths": {
            "*": ["*"]
        },
        "lib": [
            "es6",
            "es2015",
            "es2016",
            "es2017",
            "es2018"
        ]   
    },
    "include": [
        "src/**/*.ts", "index.ts"
    ]
}