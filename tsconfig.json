{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": ".",
        "allowJs": true,
        "noEmit": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "declaration": true,
        "paths": {
            "*": ["*"]
        },
        "lib": ["es6"]   
    },
    "include": [
        "src/**/*.ts", "index.ts"
    ]
}